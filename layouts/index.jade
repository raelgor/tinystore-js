doctype html
html(lang="el")
	include head.jade
	body
		include main-nav.jade
		.main-content-wrapper
			.center-wrapper
				include sidebars.jade
				.listings
					.container
						.seo-head
							img(src="/logo.png")
							h2 Καλώς ήρθατε στο pazari-vivliou.gr! Το online βιβλιοπωλείο με τις καλύτερες τιμές και τη μεγαλύτερη ποικιλία βιβλίων!
						a.banner.ws.ani04(href=carousel[0]['links-to'])
							img.ani04(alt=carousel[0].altText, src=carousel[0].image)
						.banner-list
							each val in carousel
								a(href=val['links-to'], data-links-to=val['links-to'], src=val.image)
									img.ws(alt=val.altText, src=val.image, data-links-to=val['links-to'])
						.listing-category
							h2.title Νέες κυκλοφορίες
							each val in nchome
								include product.jade
						.listing-category
							h2.title Σε προσφορά
							each val in otherbooks
								include product.jade
		include footer.jade